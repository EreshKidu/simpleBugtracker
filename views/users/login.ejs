<% layout('layouts/mainLayout') %> 



<div class="row  justify-content-center align-items-center mt-5">
    <div class="col-md-4">
        <h1>Login</h1>
        <form action="/login" method="POST" class="validated-form mb-3" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Email:</label>
                <input class="form-control" type="text"  id="username" name="username" required autofocus>
                
        
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
        
        
        
            <div class="mb-3">
                <label class="form-label" for="password">Password:</label>
                <input class="form-control" type="password"  id="password" name="password" required>
        
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-success">Login!</button>
              </div>
            
        </form>
        <p class="text-center mb-3">Or</p>

        <div class="d-grid gap-2">
           
            <a class="btn btn-primary mb-3" href="/auth/google">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                    <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/>
                </svg>
                Login using Google
            </a>

        </div>
        <p class="text-center mb-3">Don't want to sign up?</p>
        <div class="d-grid gap-2">
            <button class="btn btn-primary btn-dark mb-3" href="#">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-incognito" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="m4.736 1.968-.892 3.269-.014.058C2.113 5.568 1 6.006 1 6.5 1 7.328 4.134 8 8 8s7-.672 7-1.5c0-.494-1.113-.932-2.83-1.205a1.032 1.032 0 0 0-.014-.058l-.892-3.27c-.146-.533-.698-.849-1.239-.734C9.411 1.363 8.62 1.5 8 1.5c-.62 0-1.411-.136-2.025-.267-.541-.115-1.093.2-1.239.735Zm.015 3.867a.25.25 0 0 1 .274-.224c.9.092 1.91.143 2.975.143a29.58 29.58 0 0 0 2.975-.143.25.25 0 0 1 .05.498c-.918.093-1.944.145-3.025.145s-2.107-.052-3.025-.145a.25.25 0 0 1-.224-.274ZM3.5 10h2a.5.5 0 0 1 .5.5v1a1.5 1.5 0 0 1-3 0v-1a.5.5 0 0 1 .5-.5Zm-1.5.5c0-.175.03-.344.085-.5H2a.5.5 0 0 1 0-1h3.5a1.5 1.5 0 0 1 1.488 1.312 3.5 3.5 0 0 1 2.024 0A1.5 1.5 0 0 1 10.5 9H14a.5.5 0 0 1 0 1h-.085c.055.156.085.325.085.5v1a2.5 2.5 0 0 1-5 0v-.14l-.21-.07a2.5 2.5 0 0 0-1.58 0l-.21.07v.14a2.5 2.5 0 0 1-5 0v-1Zm8.5-.5h2a.5.5 0 0 1 .5.5v1a1.5 1.5 0 0 1-3 0v-1a.5.5 0 0 1 .5-.5Z"/>
                  </svg>
                Login as a Guest
            </button>
        </div>



</div>


  
</div>

